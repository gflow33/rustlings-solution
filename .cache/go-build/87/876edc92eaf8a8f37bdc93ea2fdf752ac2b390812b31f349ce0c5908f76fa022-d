// SyncDBByName finds a registered database by name.
func (h *Handle) SyncDBByName(name string) (db IDB, err error) {
	dblist, err := h.SyncDBs()
	if err != nil {
		return nil, err
	}

	_ = dblist.ForEach(func(b IDB) error {
		if b.Name() == name {
